@{
    ViewData["Title"] = "Connexion";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        
        <div class="card mb-4">
            <h2>Connexion</h2>
            <p class="sub">Connecte-toi pour accéder à ton espace.</p>

            <form action="/Auth/Login" method="post" onsubmit="return validerFormulaire(this)">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input id="email" name="email" type="email" placeholder="exemple@email.com" required />
                </div>

                <div class="form-group">
                    <label for="motDePasse">Mot de passe</label>
                    <input id="motDePasse" name="motDePasse" type="password" placeholder="••••••••" required />
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="error">@ViewBag.Error</div>
                }

                <button class="btn" type="submit">Se connecter</button>
            </form>

            <div class="footer">
                Pas de compte ? <a href="/Inscription/Index">Créer un compte</a>
            </div>
        </div>

    </div>
</div>
