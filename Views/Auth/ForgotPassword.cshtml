@model croupe_06_TournoiGolf.Models.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Mot de passe oublié";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        
        <div class="card mb-4">
            <h2>Mot de passe oublié</h2>
            <p class="sub">Entre ton email pour réinitialiser ton mot de passe.</p>

            <form action="/Auth/ForgotPassword" method="post">
                <div class="form-group pb-3">
                    <label for="Email">Email</label>
                    <input type="email" id="Email" name="Email" class="form-control" placeholder="exemple@email.com" required value="@Model?.Email" />
                    @if (ViewData.ModelState["Email"]?.Errors.Count > 0)
                    {
                        <span class="text-danger">@ViewData.ModelState["Email"].Errors[0].ErrorMessage</span>
                    }
                </div>

                <button class="btn btn-primary w-100" type="submit">Envoyer</button>
            </form>

            <div class="footer pt-3 text-center">
                <a href="/Auth/Login">Retour à la connexion</a>
            </div>
        </div>

    </div>
</div>
