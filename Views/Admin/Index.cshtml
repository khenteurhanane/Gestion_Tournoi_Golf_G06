@{
    ViewData["Title"] = "Espace Administrateur";
}

<style>
    body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .admin-box {
        background: linear-gradient(180deg, rgba(15,23,42,.85), rgba(11,18,32,.92));
        border-radius: 18px;
        padding: 50px 70px;
        box-shadow: 0 18px 50px rgba(0,0,0,.35);
        border: 1px solid rgba(255,255,255,.10);
        text-align: center;
        backdrop-filter: blur(8px);
    }

    .admin-box h1 {
        color: var(--text, #e7f6ef);
        font-size: 2.2em;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .admin-box p {
        color: var(--muted, #b8d9cc);
        font-size: 1.1em;
        margin-bottom: 30px;
    }

    .logout-btn {
        background: linear-gradient(135deg, #2dd4bf, #34d399);
        color: #062a22;
        border: none;
        padding: 12px 30px;
        font-size: 1em;
        font-weight: 600;
        border-radius: 14px;
        cursor: pointer;
        transition: transform .12s ease, filter .12s ease;
        text-decoration: none;
        display: inline-block;
    }

    .logout-btn:hover {
        transform: translateY(-1px);
        filter: brightness(1.03);
        text-decoration: none;
        color: #062a22;
    }
</style>

<div class="admin-box">
    <h1>Bienvenue dans l'espace administrateur</h1>
    <p>Vous êtes connecté en tant qu'administrateur.</p>

    <a class="logout-btn" href="/Auth/Logout">Se déconnecter</a>
</div>
