@model croupe_06_TournoiGolf.Models.Tournoi

@{
    ViewData["Title"] = "Créer un Tournoi";
}

<h1>Créer un Tournoi</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <form action="/Tournoi/Create" method="post">
                <div class="form-group">
                    <label>Nom du tournoi</label>
                    <input name="Nom" type="text" placeholder="Nom du tournoi" required />
                </div>

                <div class="form-group">
                    <label>Date</label>
                    <input name="DateTournoi" type="date" required />
                </div>

                <div class="form-group">
                    <label>Lieu</label>
                    <input name="Lieu" type="text" placeholder="Lieu du tournoi" required />
                </div>

                <div class="form-group">
                    <label>Description</label>
                    <textarea name="Description" placeholder="Description du tournoi"></textarea>
                </div>

                <div class="form-group">
                    <label>Nombre max de participants</label>
                    <input name="NombreMaxParticipants" type="number" value="100" />
                </div>

                <button type="submit" class="btn">Créer</button>
                <a href="/Tournoi/Index" class="btn btn-secondary">Annuler</a>
            </form>
        </div>
    </div>
</div>