@{
    ViewData["Title"] = "Accueil";
}

<div class="hero">
    <h1>Bienvenue au Tournoi de Golf</h1>
    <p>Plateforme de gestion des tournois de golf - La Cité 2026</p>
    
    <div class="bullets">
        <div class="bullet">
            <span class="dot"></span>
            <div>Inscrivez-vous aux tournois disponibles</div>
        </div>
        <div class="bullet">
            <span class="dot"></span>
            <div>Créez ou rejoignez une équipe</div>
        </div>
        <div class="bullet">
            <span class="dot"></span>
            <div>Gérez vos inscriptions en ligne</div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <h2>Tournois</h2>
            <p class="sub">Consultez les tournois disponibles et inscrivez-vous.</p>
            <a class="btn" href="/Tournoi/Index">Voir les tournois</a>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <h2>Inscription</h2>
            <p class="sub">Créez votre compte pour participer.</p>
            <a class="btn" href="/Inscription/Index">S'inscrire</a>
        </div>
    </div>
</div>
